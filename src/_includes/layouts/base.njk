<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }}</title>
  <link rel="icon" type="image/png" href="/assets/images/icon.png">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Merienda:wght@400;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/assets/css/main.css">
</head>
<body>
  <!-- Fixed animated background -->
  <div class="fixed-background"></div>
  
  <!-- Page content -->
  <div class="page-content">
    <header>
    <div class="header-inner">
      <h1><a href="/"><img src="/assets/images/logo.png" alt="LAPRO" class="logo-image"></a></h1>
      <nav>
        <ul class="main-menu">
          <!-- Botón directo para desktop -->
          <li class="desktop-ofertas">
            <a href="/index.html#ofertas" class="ofertas-button desktop-button">Ofertas del Mes</a>
          </li>
          <!-- Botón directo para móvil/tablet -->
          <li class="mobile-ofertas">
            <a href="/index.html#ofertas" class="ofertas-button mobile-button">Ofertas</a>
          </li>
        </ul>
      </nav>
    </div>
  </header>

  <!-- Black Friday Banner -->
  <header class="black-friday-banner">
    <!-- Product Images Ribbon -->
    <div class="product-ribbon">
      <img src="/assets/images/amazon-firestick.png" alt="Amazon Fire Stick" class="ribbon-image">
      <img src="/assets/images/consola-microsoft-xbox.jpg" alt="Xbox Console" class="ribbon-image">
      <img src="/assets/images/audífonos-apple-airpods.png" alt="Apple AirPods" class="ribbon-image">
      <img src="/assets/images/dronmini-4-pro.png" alt="DJI Mini 4 Pro" class="ribbon-image">
      <img src="/assets/images/tenis-adidas.jpeg" alt="Adidas Shoes" class="ribbon-image">
      <img src="/assets/images/termo-stanley.png" alt="Stanley Thermo" class="ribbon-image">
    </div>
    
    <div class="banner-container">
      <!-- Main Offer Text -->
      <div class="offer-text">
        <h1 class="banner-title">Black Friday</h1>
        <p class="banner-subtitle">
          <span class="highlight">LA OFERTA TERMINA PRONTO</span> - HASTA 70% DE DESCUENTO
        </p>
      </div>

      <!-- Countdown Timer -->
      <div id="countdown-timer" class="countdown-timer">
        <div class="timer-item">
          <div id="days" class="timer-digit">00</div>
          <div class="timer-label">Días</div>
        </div>
        <div class="timer-separator">:</div>
        <div class="timer-item">
          <div id="hours" class="timer-digit">00</div>
          <div class="timer-label">Horas</div>
        </div>
        <div class="timer-separator">:</div>
        <div class="timer-item">
          <div id="minutes" class="timer-digit">00</div>
          <div class="timer-label">Minutos</div>
        </div>
        <div class="timer-separator">:</div>
        <div class="timer-item">
          <div id="seconds" class="timer-digit">00</div>
          <div class="timer-label">Segundos</div>
        </div>
      </div>

      <!-- CTA Button -->
      <div class="cta-button-wrapper">
        <a href="#ofertas" class="cta-button">
          VER OFERTAS
        </a>
      </div>
    </div>
  </header>

  <main>
    {{ content | safe }}
  </main>

    <footer>
      <p>&copy; 2025 Agencia LAPRO</p>
    </footer>
  </div>

  <!-- Script de Netlify Identity para redirección -->
  <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
  <script>
    if (window.netlifyIdentity) {
      window.netlifyIdentity.on("init", user => {
        if (!user) {
          window.netlifyIdentity.on("login", () => {
            document.location.href = "/admin/";
          });
        }
      });
    }
  </script>

  <!-- All JavaScript functionality moved to main.js -->
  
  <!-- Main JavaScript -->
  <script src="/assets/js/main.js"></script>
</body>
</html>